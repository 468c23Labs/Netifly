@import url('http://fonts.googleapis.com/css?family=Alegreya+Sans+SC:100')




li
  list-style: none
ul
	padding: 0

body
	font-family: "Alegreya Sans SC", sans-serif, arial
	margin: 0
	padding: 0
	border: 0
a
	text-decoration: none
	color: #000



table
	border-collapse: collapse
	border-spacing: 0

/* --------------------------------

.top-pane

-------------------------------- */
.top-pane
  height: 6rem
  line-height: 6rem
  text-align: center
	margin: 0
	padding: 0
	border: 0


.top-pane > h1
  font-size: 2.2rem

@media only screen and (min-width: 600px)
  .top-pane
    height: 200px
    line-height: 200px
.top-pane > span.title
  font-size: 6rem
  margin: 0

.top-pane hr
  height: 1px
  width: 60rem
  border: none
  background-image: linear-gradient(to right, rgba(0,0,0,0) 0%, #000 50%, rgba(0,0,0,0) 100%)
	margin: 0
	padding: 0
	border: 0


/* --------------------------------

.cd-*

-------------------------------- */
.cd-main
  margin-top: 100px
.cd-item
  width: 100%
  height: 300px
  text-align: center
	display: table-cell
	vertical-align: middle
	margin: 0
	padding: 0
	border: 0

.cd-item a
  display: table
  height: 100%
  width: 100%
	text-decoration: none

.cd-item > h2
  font-size: 2.2rem

.cd-item > p
  line-height: 1.2
  font-size: 1.4rem
  opacity: 0.6
  padding: 1em 0

@media only screen and (min-width: 600px)
  .cd-item
    width: 50%
    float: left
    height: 520px

  .cd-item > h2
    font-size: 3rem

  .cd-item > p
    font-size: 1.6rem
  .cd-item:nth-of-type(4n+1)
    background-color: #000
	.cd-item:nth-of-type(4n+1) a
	  color: #fff
	.cd-item:nth-of-type(4n)
		background-color: #000
	.cd-item:nth-of-type(4n) a
		color: #fff
